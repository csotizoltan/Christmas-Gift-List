<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorAddBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainPressedStartColorAddBack" android:endColor="@color/btnMainPressedEndColorAddBack"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorAddBack" />
            <solid android:color="@color/btnMainShapeEndColorAddBack"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainShapeBorderColorAddBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainShapeStartColorAddBack" android:endColor="@color/btnMainShapeEndColorAddBack" />
        </shape>
    </item>
</selector>