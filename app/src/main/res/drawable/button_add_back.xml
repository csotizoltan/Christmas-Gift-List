<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnAddGiftPressedBorderColorBack" />
            <gradient android:angle="-90" android:startColor="@color/btnAddGiftPressedStartColorBack" android:endColor="@color/btnAddGiftPressedEndColorBack"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnAddGiftPressedBorderColorBack" />
            <solid android:color="@color/btnAddGiftShapeEndColorBack"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnAddGiftShapeBorderColorBack" />
            <gradient android:angle="-90" android:startColor="@color/btnAddGiftShapeStartColorBack" android:endColor="@color/btnAddGiftShapeEndColorBack" />
        </shape>
    </item>
</selector>