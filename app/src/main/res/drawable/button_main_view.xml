<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorView" />
            <gradient android:angle="-90" android:startColor="@color/btnMainPressedStartColorView" android:endColor="@color/btnMainPressedEndColorView"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorView" />
            <solid android:color="@color/btnMainShapeEndColorView"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainShapeBorderColorView" />
            <gradient android:angle="-90" android:startColor="@color/btnMainShapeStartColorView" android:endColor="@color/btnMainShapeEndColorView" />
        </shape>
    </item>
</selector>