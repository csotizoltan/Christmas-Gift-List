<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorViewBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainPressedStartColorViewBack" android:endColor="@color/btnMainPressedEndColorViewBack"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainPressedBorderColorViewBack" />
            <solid android:color="@color/btnMainShapeEndColorViewBack"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="@color/btnMainShapeBorderColorViewBack" />
            <gradient android:angle="-90" android:startColor="@color/btnMainShapeStartColorViewBack" android:endColor="@color/btnMainShapeEndColorViewBack" />
        </shape>
    </item>
</selector>